<Window x:Class="AnimalShelter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnimalShelter.Animals"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>

        <DataTemplate DataType="{x:Type local:AnimalsModel}">

            <local:AnimalsView/>

        </DataTemplate>

        <DataTemplate DataType="{x:Type local:AnimalDetailsModel}">

            <local:AnimalDetailsView/>

        </DataTemplate>

    </Window.Resources>
    <Grid>
        
   
        <DockPanel LastChildFill="True">
            <StackPanel x:Name="navigation" DockPanel.Dock="Left">

                <Button Content="Animals" Command="{Binding AnimalsListCommand}"></Button>

                <Button Content="Visits" Command="{Binding EmpCommand}"></Button>

            </StackPanel>
            <ContentControl x:Name="Pages" DockPanel.Dock="Right" Content="{Binding SelectedViewModel}"/>
        </DockPanel>
    </Grid>
</Window>